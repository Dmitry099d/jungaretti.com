---
import { photos } from "../data/photos.js";
import BaseLayout from "../layouts/BaseLayout.astro";
import LinkBubble from "../components/LinkBubble.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
---

<BaseLayout>
  <div class="container my-16 md:my-24">
    <h1 class="text-4xl text-center font-black md:text-5xl">JP Ungaretti</h1>
    <p class="text-lg text-center leading-snug font-medium md:text-xl">
      Software Engineer and Photographer
    </p>
    <div class="flex flex-row flex-wrap justify-center space-x-2 mt-4">
      <LinkBubble text="hello@jungaretti.com" href="mailto:hello@jungaretti.com"
      />
      <LinkBubble text="GitHub" href="https://github.com/jungaretti" />
    </div>
  </div>
  <div class="container my-8">
    <h2 class="text-3xl font-bold">Favorite Photos</h2>
    <div class="mt-2">
      <PhotoGallery photos={photos.filter((p) => p.meta.favorite)} />
    </div>
  </div>
</BaseLayout>
