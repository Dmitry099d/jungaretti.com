---
import { photos } from "../data/photos.js";
import BaseLayout from "../layouts/BaseLayout.astro";
import PhotoGallery from "../components/PhotoGallery.astro";
---

<BaseLayout>
  <div class="container my-16 md:my-24">
    <div class="text-left">
      <h1 class="font-black text-4xl md:text-5xl">JP Ungaretti</h1>
      <p class="sfont-medium leading-tight text-lg md:text-2xl">
        Developer and Photographer
      </p>
    </div>
    <ul class="mt-4 flex flex-col md:flex-row md:space-x-4">
      <li class="underline text-lg">
        <a href="mailto:hello@jungaretti.com" target="_blank">
          hello@jungaretti.com
        </a>
      </li>
      <li class="underline text-lg">
        <a href="https://github.com/jungaretti" target="_blank">GitHub</a>
      </li>
    </ul>
  </div>
  <div class="container my-4 md:my-6">
    <h2 class="text-3xl font-bold">My Photography</h2>
    <div class="mt-2">
      <PhotoGallery photos={photos.filter((p) => p.meta.favorite)} />
    </div>
  </div>
</BaseLayout>
